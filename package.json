{
    "name": "toon-formatter",
    "version": "2.0.0",
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/ankitpal181"
    },
    "description": "A lightweight library to convert between TOON (Token-Oriented Object Notation) and popular data formats (JSON, YAML, XML, CSV) with end-to-end encryption support. Reduce LLM token costs by up to 40%.",
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "test": "node --test test/*.test.js",
        "test:watch": "node --test --watch test/*.test.js"
    },
    "keywords": [
        "toon",
        "json",
        "yaml",
        "xml",
        "csv",
        "converter",
        "llm",
        "token",
        "optimization",
        "data-format",
        "serialization",
        "formatter",
        "encryption",
        "aes-256-gcm",
        "security",
        "crypto",
        "secure-data",
        "end-to-end-encryption"
    ],
    "author": "Ankit Pal",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ankitpal181/toon-formatter-lib"
    },
    "bugs": {
        "url": "https://github.com/ankitpal181/toon-formatter-lib/issues"
    },
    "homepage": "https://github.com/ankitpal181/toon-formatter-lib#readme",
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "js-yaml": "^4.1.0",
        "papaparse": "^5.4.1"
    },
    "devDependencies": {
        "xmldom": "^0.6.0"
    },
    "exports": {
        ".": "./src/index.js",
        "./json": "./src/json.js",
        "./yaml": "./src/yaml.js",
        "./xml": "./src/xml.js",
        "./csv": "./src/csv.js",
        "./validator": "./src/validator.js",
        "./utils": "./src/utils.js",
        "./encryptor": "./src/encryptor.js"
    }
}